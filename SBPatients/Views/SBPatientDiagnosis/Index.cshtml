@model IEnumerable<SBPatients.Models.PatientDiagnosis>

@{
    ViewData["Title"] = "Diagnosis for Patient: " + TempData["Name"];
}

<h2>List of Diagnosis for Patient: @TempData["Name"]</h2>
<h3 class="text-danger">@TempData["Error"]</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis)
            </th>
            <th>
                Patient Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-controller="SBPatientTreatment" asp-action="Index" 
                   asp-route-patientdiagnosisid="@item.PatientDiagnosisId" 
                   asp-route-patientname="@item.Patient.FirstName, @item.Patient.LastName"
                   asp-route-diagnosisname="@item.Diagnosis.Name" 
                   asp-route-diagnosisid="@item.DiagnosisId" >
                    @Html.DisplayFor(modelItem => item.Diagnosis.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.LastName), 
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PatientDiagnosisId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PatientDiagnosisId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PatientDiagnosisId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
