@model SBPatients.Models.DispensingUnit

@{
    ViewData["Title"] = "Edit Dispensing Unit";
}

<h2>Edit</h2>

<h4>DispensingUnit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DispensingCode" class="control-label"></label>
                @*Input is disabled to discourage editing the Primary key*@
                <input asp-for="DispensingCode" class="form-control" readonly/>
                <span asp-validation-for="DispensingCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
